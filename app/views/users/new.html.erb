<h1>Create a new user profile</h1>
<div>
<%= form_with model: @user, url: { controller: 'users', action: 'create' }, method: :post, local: true do |form| %>
  <%= form.label :username %>
  <%= form.text_field :username %>
  <%= form.label :email %>
  <%= form.text_field :email %>
  <%= form.label :password %>
  <%= form.password_field :password %>
  <%= form.label :password_confirmation %>
  <%= form.password_field :password_confirmation %>
  <%= form.submit "Create User Profile" %>
<% end %>
</div>